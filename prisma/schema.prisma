generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Contact {
  id           Int            @id @default(autoincrement())
  userId       String
  name         String
  affiliation  String @default("hello")
  Occupation   Occupation[]
  Notes        Notes[]
  Interactions Interactions[]
}

model Occupation {
  id        Int      @id @default(autoincrement())
  contactId Int
  company   String
  position  String
  updatedAt DateTime @default(now())
  contact   Contact  @relation(fields: [contactId], references: [id])
}

model Notes {
  id        Int      @id @default(autoincrement())
  contactId Int
  notes     String
  updatedAt DateTime @default(now())
  contact   Contact  @relation(fields: [contactId], references: [id])
}

model Interactions {
  id         Int          @id @default(autoincrement())
  contactId  Int
  title      String
  location   String
  date       DateTime
  contact    Contact      @relation(fields: [contactId], references: [id])
  Highlights Highlights[]
}

model Highlights {
  id            Int          @id @default(autoincrement())
  interactionId Int
  highlight     String
  interaction   Interactions @relation(fields: [interactionId], references: [id])
}
